<Items>
  <Item
    name="Oxygen Generator"
    category="Machine"
    linkable="true">

    <Sprite texture ="Content/Items/OxygenGenerator/oxygengenerator.png" depth="0.8"/>
	
	<fixrequirement name="Mechanical repairs">
      <skill name="Construction" level="30"/>
      <item name="Welding Tool"/>
      <item name="Wrench"/>
    </fixrequirement>

    <OxygenGenerator powerconsumption="1000.0" minvoltage="0.5" canbeselected="true">
	  <StatusEffect type="OnFire" target="This" Condition="-9"/>
	  <StatusEffect type="OnActive" target="Contained" targetnames="Oxygen Tank" Condition="0.5"/>
	  <StatusEffect type="OnActive" target="Contained" targetnames="Oxygenite Tank" Condition="0.01"/>
      <sound file="Content/Items/OxygenGenerator/oxygengenerator.ogg" type="OnActive" range="1000.0" volume="CurrFlow" volumemultiplier="0.001f" loop="true"/>
	  
	  <StatusEffect type="OnBroken" target="This" disabledeltatime="true">
	    <sound file="Content/Items/Reactor/explosion.ogg"/>
        <Explosion range ="700" damage="100" structuredamage="100" stun="15" force="10" decal="explosion" decalsize="0.6"/>
		<Fire size="500"/>
      </StatusEffect>
    </OxygenGenerator>
  
    <trigger/>

    <ItemContainer capacity="5" canbeselected ="true" msg="Insert oxygen tank to refill it">
      <Containable name="Oxygen Tank"/>
	  <Containable name="Oxygenite Tank"/>
    </ItemContainer>

    <ConnectionPanel selectkey="Action" canbeselected="true" msg="Rewire [Screwdriver]">
      <requireditem name="Screwdriver" type="Equipped"/>
      <input name="power_in"/>
    </ConnectionPanel>
  </Item>
  
  <Item
    name="Oxygen Module"
    category="Machine"
    linkable="true">

    <Sprite texture ="Mods/BTE/Items/OxygenGenerator/OxygenModule.png" depth="0.79"/>
	
	<fixrequirement name="Mechanical repairs">
      <skill name="Construction" level="20"/>
      <item name="Welding Tool"/>
      <item name="Wrench"/>
    </fixrequirement>

    <OxygenGenerator powerconsumption="750" minvoltage="0.5" canbeselected="true">
      <StatusEffect type="OnFire" target="This" Condition="-8"/>
	  <sound file="Content/Items/OxygenGenerator/oxygengenerator.ogg" type="OnActive" range="1000" volume="CurrFlow" volumemultiplier="0.001f" loop="true"/>
	  
	  <StatusEffect type="OnBroken" target="This" disabledeltatime="true">
	    <sound file="Content/Items/Reactor/explosion.ogg"/>
        <Explosion range ="600" damage="75" structuredamage="75" stun="10" force="8" decal="explosion" decalsize="0.5"/>
		<Fire size="400"/>
      </StatusEffect>
    </OxygenGenerator>
  
    <trigger/>

    <ConnectionPanel selectkey="Action" canbeselected="true" msg="Rewire [Screwdriver]">
      <requireditem name="Screwdriver" type="Equipped"/>
      <input name="power_in"/>
    </ConnectionPanel>
  </Item>

  <Item
    name="Vent"
    category="Machine"
    linkable="true">

    <Sprite texture ="Content/Items/OxygenGenerator/vent.png" depth="0.95"/>

    <Vent canbeselected="false">
      <sound file="Content/Items/OxygenGenerator/ventilation.ogg" type="OnActive" range="600.0" volume="OxygenFlow" volumemultiplier="0.001f" loop="true"/>
    </Vent>
  </Item>
  
